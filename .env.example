# VibeSecure - Environment Variables
# Copy to .env: cp .env.example .env


# APPLICATION SETTINGS
DEBUG=false

# SERVICE PORTS
FASTAPI_PORT=8000
REDIS_PORT=6379
POSTGRES_PORT=5432

# DATABASE (PostgreSQL)
DATABASE_URL=postgresql://vibesecure:vibesecure_password@postgres:5432/vibesecure
POSTGRES_USER=vibesecure
POSTGRES_PASSWORD=vibesecure_password
POSTGRES_DB=vibesecure

# REDIS & CELERY
REDIS_URL=redis://redis:6379/0
REDIS_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# BACKEND & FRONTEND URLS
BACKEND_URL=http://api:8000
FRONTEND_URL=http://localhost:3000

# CORS SETTINGS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# RATE LIMITING
RATE_LIMIT_MAX_REQUESTS=100
DOMAIN_VERIFICATION_MAX_REQUESTS_PER_DOMAIN_PER_DAY=3
DOMAIN_VERIFICATION_MAX_REQUESTS_PER_USER_PER_DAY=5

# FIREBASE AUTHENTICATION
# Paste your entire Firebase service account JSON string below
FIREBASE_CREDENTIALS_JSON=<paste-your-entire-firebase-json-here>
FIREBASE_PROJECT_ID=vibesecure-demo

# Client-side Firebase Configuration
# Get these values from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/general
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# EMAIL SERVICE (Resend)
RESEND_API_KEY=re_your_key_here
EMAIL_FROM=noreply@notifications.thebuildguild.dev

# AI FEATURES (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# CLIENT CONFIGURATION
VITE_CLIENT_PORT=3000
VITE_API_BASE=/api

# SECURITY CHECK SETTINGS
SECURITY_CHECK_DEFAULT_TIMEOUT=10
SECURITY_CHECK_LIBRARY_TIMEOUT=15
SECURITY_CHECK_MAX_CONCURRENT=5

# TLS/CERTIFICATE SETTINGS (in days)
TLS_CERT_EXPIRY_WARNING_DAYS=30
TLS_CERT_EXPIRY_CRITICAL_DAYS=7

# ZAP SCANNER SETTINGS
ZAP_BASE_URL=http://zap:8090
ZAP_TIMEOUT=180
ZAP_SPIDER_POLL_INTERVAL=3
ZAP_ACTIVE_SCAN_POLL_INTERVAL=8
ZAP_RATE_LIMIT_DELAY=1.0
ZAP_THREADS_PER_HOST=1

# CELERY WORKER SETTINGS (in seconds)
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=540
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_CONCURRENCY=4
CELERY_RESULT_EXPIRES=86400